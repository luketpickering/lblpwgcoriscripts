#!/bin/bash
#SBATCH --account=dune
#SBATCH --qos=__QOS__
#SBATCH --constraint=haswell
#SBATCH --nodes=__NNODES__
#SBATCH --job-name=__JOBNAME__
#SBATCH --time=__TIME_REQ_H__:__TIME_REQ_EM__:00
#SBATCH --array=0-__NARRAY__

#Job settings:
TIME_REQ_M=__TIME_REQ_M__
SYSTLIST="__SYSTLIST__"
SAMPLELIST="__SAMPLELIST__"
PENALTY="__PENALTY__"
THROWTYPE="start:stat:fake"
HIERARCHY="__HIERARCHY__"
OSCVARS="__OSCVARS__"
UNITSAFETIME_M="__UNITSAFETIME_M__"
JOBNAME="__JOBNAME__"
CAFEEXE="__CAFEEXE__"

#OpenMP settings:
export OMP_NUM_THREADS=__NTHREADS__
export OMP_PLACES=cores
export OMP_PROC_BIND=spread

#Output settings:
SYSTLIST_SANIT=$(echo $SYSTLIST | tr ':' '_' | tr '=' '-')
OSCVARS_SANIT=$(echo $OSCVARS | tr ':' '_')
JOBNAME_SANIT=$(echo $JOBNAME | tr ' ' '_')
export OUSERDIR=${USER}
OUTDIR=/project/projectdirs/dune/users/${OUSERDIR}/CAFAnaJobOutput/${JOBNAME_SANIT}/syst_${SYSTLIST_SANIT}/osc_${OSCVARS_SANIT}/samp_${SAMPLELIST}/pen_${PENALTY}/hie_${HIERARCHY}/$(date "+%Y_%m_%d-%H_%M_%S")/${SLURM_JOB_ID}
mkdir -p ${OUTDIR}
#SRUNLOGFILE="${OUTDIR}/throws_%t.log"
SRUNLOGFILE=/dev/null

echo "[INFO]: Job writing output to ${OUTDIR} and task logs to ${SRUNLOGFILE}."

#Container settings:
#debian based all deps Analysis candidate version
IMG="picker24/dune_cafana:SLS_wsf_wdeps_03bf817"
#centos based cvmfs
#IMG="picker24/dune_cafana:SLS_wsf"

SCRIPT="./run_throws.sh"
if [ "__USEVQUIET__" == "1" ]; then
  SCRIPT="./run_throws_veryquiet.sh"
fi

NTASKSTOTAL=$(( __TASKSPERNODE__ * __NNODES__ ))
NCORESPERTASK=$(( 64 / __TASKSPERNODE__ ))

echo "[INFO]: Running ${NTASKSTOTAL} ${SCRIPT} tasks, over __NNODES__, each with ${NCORESPERTASK} dedicated hyperthreads."

CPUBINDOPT="cores"
if [ ${NCORESPERTASK} == 1 ]; then
  CPUBINDOPT="threads"
fi

if [ "__USEWRAPPER__" == "1" ]; then
  srun -n ${NTASKSTOTAL} -c ${NCORESPERTASK} \
       --output=${SRUNLOGFILE} \
       --cpu_bind=${CPUBINDOPT} \
       --bcast \
    ./shifter_sleep_wrapper.sh ${IMG} ${SCRIPT} ${CAFEEXE} ${TIME_REQ_M} ${UNITSAFETIME_M} ${OUTDIR} ${SYSTLIST} ${SAMPLELIST} ${THROWTYPE} ${PENALTY} ${HIERARCHY} ${OSCVARS}
else
               # Tasks handle their own logging
  srun -n ${NTASKSTOTAL} -c ${NCORESPERTASK} \
       --output=${SRUNLOGFILE} \
       --cpu_bind=${CPUBINDOPT} \
    shifter \
      --module=none \
      --volume="/global/project:/project" \
      --image=${IMG} \
      ${SCRIPT} ${CAFEEXE} ${TIME_REQ_M} ${UNITSAFETIME_M} ${OUTDIR} ${SYSTLIST} ${SAMPLELIST} ${THROWTYPE} ${PENALTY} ${HIERARCHY} ${OSCVARS}
fi
